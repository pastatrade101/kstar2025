
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin role
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // User profiles
    match /users/{userId} {
      allow read: if true;
      // Allow a user to create their own profile, or an admin to create any.
      allow create: if (request.auth != null && request.auth.uid == userId && request.resource.data.role == 'user') || isAdmin();
      // Allow a user to update their own profile (but not change their role), or an admin to update any.
      allow update: if (request.auth != null && request.auth.uid == userId && request.resource.data.role == resource.data.role) || isAdmin();
      // Allow user to write to subcollections (like job_applications)
      allow write: if request.auth != null && request.auth.uid == userId;

      // A user can create/update/delete their own applications. This rule allows the write.
      match /job_applications/{applicationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Admins need a separate rule on the collection group to be able to list/read across ALL users.
    match /{path=**}/job_applications/{applicationId} {
      allow list, read: if isAdmin();
    }


    // Publicly readable content, admin-only writes
    match /courses/{courseId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /instructors/{instructorId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /news_events/{newsEventId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /jobs/{jobId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /admission_information/{infoId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact submissions can be created by anyone, but only read/managed by admins
    match /contact_submissions/{submissionId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }

    // Volunteer registrations can be created by anyone, but only read/managed by admins
    match /volunteer_registrations/{registrationId} {
      allow create: if true;
      allow read, update, delete: if isAdmin();
    }
    
    // Fallback for any other path - deny by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
