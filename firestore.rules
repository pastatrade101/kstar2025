/**
 * @file Firestore Security Rules for EduPro Hub
 * @corePhilosophy This ruleset allows open read and write access to all collections for development purposes.
 * @dataStructure The database consists of several top-level collections.
 * @keySecurityDecisions
 *   - Public read and write access is granted to all collections to allow easy data access and modification during development.
 *   - This is NOT secure for production.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read and write to all documents in the database.
    // This is insecure and should not be used in production.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
