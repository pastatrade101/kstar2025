/**
 * @file Firestore Security Rules for EduPro Hub
 * @description This ruleset enforces read access for all users on news_events, courses, instructors and admission_information
 * while restricting write access.
 *
 * Data Structure:
 * - /courses/{courseId}: Stores course information. Public read, restricted write.
 * - /instructors/{instructorId}: Stores instructor information. Public read, restricted write.
 * - /news_events/{newsEventId}: Stores news and events. Public read, restricted write.
 * - /admission_information/{admissionInformationId}: Stores admission information. Public read, restricted write.
 *
 * Key Security Decisions:
 * - Public read access to all collections, allowing any user to fetch data.
 * - Write access is disabled for all collections.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows anyone to read courses, but restricts all write operations.
     * @path /courses/{courseId}
     * @allow (get, list) - Any user can read course information.
     * @deny (create, update, delete) - No user can create, update, or delete course information.
     * @principle Allows public read access while preventing unauthorized data modification.
     */
    match /courses/{courseId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read instructor information, but restricts all write operations.
     * @path /instructors/{instructorId}
     * @allow (get, list) - Any user can read instructor information.
     * @deny (create, update, delete) - No user can create, update, or delete instructor information.
     * @principle Allows public read access while preventing unauthorized data modification.
     */
    match /instructors/{instructorId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read news events, but restricts all write operations.
     * @path /news_events/{newsEventId}
     * @allow (get, list) - Any user can read news event information.
     * @deny (create, update, delete) - No user can create, update, or delete news event information.
     * @principle Allows public read access while preventing unauthorized data modification.
     */
    match /news_events/{newsEventId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows anyone to read admission information, but restricts all write operations.
     * @path /admission_information/{admissionInformationId}
     * @allow (get, list) - Any user can read admission information.
     * @deny (create, update, delete) - No user can create, update, or delete admission information.
     * @principle Allows public read access while preventing unauthorized data modification.
     */
    match /admission_information/{admissionInformationId} {
      allow get, list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}